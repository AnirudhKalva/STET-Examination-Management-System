<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/next1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/page_1_signup_image"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/stet_logo">

    </ImageView>

    <TextView
        android:id="@+id/page_1_signup_text_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/global__stet_title"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/page_1_signup_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/global__name"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/page_1_signup_name_et"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/box"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="17dp">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/page_1_signup_email"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/global__email"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/page_1_signup_email_et"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/box"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textSize="17dp">

            </EditText>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/page_1_signup_phone"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/global__phone_no"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/page_1_signup_phn_et"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/box"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textSize="12sp">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/page_1_signup_pass"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/global__password"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/page_1_signup_Edtpass"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/box"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="17dp">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/signup_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:textSize="17sp"
                android:background="@drawable/button_shape"
                android:text="@string/global__back" />

            <Button
                android:id="@+id/signup_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:textSize="17sp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/button_shape"
                android:text="@string/page_1_signup" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>