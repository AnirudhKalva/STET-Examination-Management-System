<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/page_forget_image"
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:src="@drawable/stet_logo">

        </ImageView>
        <TextView
            android:id="@+id/page_forget_text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:text="@string/global__stet_title"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/page_forget_text_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="@string/enter_phone_no_to_retreive_and_reset_password"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/page_forget_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/global__phone_no"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/page_forget_phn_et"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:background="@drawable/box"
                        android:inputType="phone"
                        android:paddingStart="10dp"
                        android:textSize="17sp">


                    </EditText>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/page_forget_sendotp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:background="@drawable/button_shape"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textSize="17sp"
                android:text="@string/global__send_otp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/page_forget_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/global__enter_otp"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:id="@+id/page_forget_enter_otp"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/box"
                    android:inputType="number"
                    android:paddingStart="10dp">

                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/page_forget_verify"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_shape"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:textSize="17sp"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:text="@string/global__verify" />

            <Button
                android:id="@+id/page_forget_submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:background="@drawable/button_shape"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:textSize="17sp"
                android:text="@string/global__submit" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>